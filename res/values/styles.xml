<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme"> <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="Theme.Styled" parent="@style/Theme.Sherlock.Light">
        <item name="android:textColor">@android:color/white</item>
    </style>
    <!-- parent="Theme.Sherlock.Light" -->

    <style name="Theme_ActionBar_Tradus" parent="@style/Theme.Sherlock.Light">
        <item name="actionBarStyle">@style/Widget.Styled.ActionBar</item>
        <item name="actionBarSize">50dp</item>
    </style>

    <style name="Widget.Styled.ActionBar" parent="style/Widget.Sherlock.Light.ActionBar.Solid">
        <item name="android:background">@color/category_color_compliment</item>
        <item name="background">@color/category_color_compliment</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="actionBarSize">50dp</item>

    </style>

</resources>